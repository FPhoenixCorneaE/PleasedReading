<resources>

    <!--Base application theme-->
    <style name="pr_BaseTheme" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--全屏主题-->
    <style name="pr_FullscreenTheme" parent="pr_BaseTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- App主题 -->
    <style name="pr_AppTheme" parent="pr_BaseTheme">
        <!--标题栏颜色-->
        <item name="colorPrimary">@color/pr_colorPrimary</item>
        <!--状态栏底色-->
        <item name="colorPrimaryDark">@color/pr_colorPrimaryDark</item>
        <item name="colorAccent">@color/pr_colorAccent</item>
        <item name="actionBarSize">@dimen/pr_actionBarSize</item>
        <item name="android:textColorPrimary">@color/pr_textColorPrimary</item>
        <item name="android:actionBarSize">@dimen/pr_actionBarSize</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>
