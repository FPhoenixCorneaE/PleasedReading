<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="FRImageViewer">
        <!--是否显示图片位置-->
        <attr name="fr_ivr_show_index" format="boolean" />
        <!--是否开启进场动画-->
        <attr name="fr_ivr_do_enter" format="boolean" />
        <!--是否开启退场动画-->
        <attr name="fr_ivr_do_exit" format="boolean" />
        <!--进场与退场动画的执行时间-->
        <attr name="fr_ivr_duration" format="integer" />
        <!--是否允许图片拖拽-->
        <attr name="fr_ivr_do_drag" format="boolean" />
        <!--拖拽模式-->
        <attr name="fr_ivr_drag_type">
            <enum name="classic" value="1" />
            <enum name="wechat" value="2" />
        </attr>
        <!--是否允许图片缩放-->
        <attr name="fr_ivr_scaleable" format="boolean" />
    </declare-styleable>

    <!--自定义圆形进度条-->
    <declare-styleable name="FRCircleProgressBar">
        <attr name="fr_mlpb_inner_radius" format="dimension" />
        <attr name="fr_mlpb_background_color" format="color" />
        <attr name="fr_mlpb_progress_color" format="color" />
        <attr name="fr_mlpb_progress_stoke_width" format="dimension" />
        <attr name="fr_mlpb_show_arrow" format="boolean" />
        <attr name="fr_mlpb_enable_circle_background" format="boolean" />
        <attr name="fr_mlpb_arrow_width" format="dimension" />
        <attr name="fr_mlpb_arrow_height" format="dimension" />

        <attr name="fr_mlpb_progress" format="integer" />
        <attr name="fr_mlpb_max" format="integer" />

        <attr name="fr_mlpb_progress_text_size" format="dimension" />
        <attr name="fr_mlpb_progress_text_color" format="color" />

        <!--<attr name="fr_mlpb_progress_text_offset" format="dimension"/>-->
        <attr name="fr_mlpb_progress_text_visibility" format="enum">
            <enum name="visible" value="0" />
            <enum name="invisible" value="1" />
        </attr>
    </declare-styleable>
</resources>